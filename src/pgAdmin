/*------------------file4-------------------------*/

CREATE TABLE colour(
    id SERIAL PRIMARY KEY ,
    colour VARCHAR NOT NULL
);


CREATE TABLE cat(
    id SERIAL PRIMARY KEY ,
    name VARCHAR(50) NOT NULL ,
    age INT NOT NULL ,
    colour_id INTEGER REFERENCES colour (id)
);

SELECT * FROM colour;
SELECT * FROM cat;


INSERT INTO colour(colour)
VALUES ('BLACK'),
       ('WHITE'),
       ('RED'),
       ('GREY');



INSERT INTO cat(name, age, colour_id)
VALUES ('Businka',5,2),
       ('Claus',8,1),
       ('Rick',6,3),
       ('Blaze',7,4),
       ('NaCl',5,2);

