/*----------------------------file10------------------------*/

CREATE TABLE OS(
    id SERIAL PRIMARY KEY ,
    operation_system VARCHAR NOT NULL
);


CREATE TABLE phone(
    id SERIAL PRIMARY KEY ,
    model VARCHAR(50) NOT NULL ,
    years iNTEGER ,
    os_id INTEGER REFERENCES OS (id)
);

SELECT * FROM OS;
SELECT * FROM phone;

INSERT INTO OS(operation_system)
VALUES ('ANDROID'),
       ('IOS');


INSERT INTO phone(model, years, os_id)
VALUES ('SAMSUNG', 1837, 1)
       ('REDMI', 1989, 1)
