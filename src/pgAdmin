CREATE TABLE stage(
    id SERIAL PRIMARY KEY ,
    stage VARCHAR NOT NULL
);


CREATE TABLE campus_persons(
    id SERIAL PRIMARY KEY ,
    name VARCHAR(50) NOT NULL ,
    age INT NOT NULL ,
    stage_id INTEGER REFERENCES stage (id)
);


SELECT * FROM stage;
