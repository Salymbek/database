/*---------------------file6---------------------*/

CREATE TABLE colourss(
    id SERIAL PRIMARY KEY ,
    colours VARCHAR NOT NULL
);


CREATE TABLE car(
    id SERIAL PRIMARY KEY ,
    model VARCHAR(50) NOT NULL ,
    year INT NOT NULL ,
    colours_id INTEGER REFERENCES colourss (id)
);

SELECT * FROM colourss;
SELECT * FROM car;


